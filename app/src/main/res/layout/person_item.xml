<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout style="@style/mid_layout"
        android:id="@+id/item_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/pay_diamond"
            android:id="@+id/item_name_image"
            android:visibility="gone"
            android:layout_weight="0"
            android:layout_gravity="left"
            android:layout_marginRight="8dp" />

        <TextView style="@style/item_text"
            android:id="@+id/item_name"
            android:text="名字"/>
        <TextView style="@style/item_text"
            android:id="@+id/item_value"
            android:layout_gravity="right"
            android:text=""
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>
        <cn.droidlover.xdroid.demo.ui.CircleImageView
            android:id="@+id/item_value_image"
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="fill"
            android:layout_marginRight="7dp"
            android:visibility="gone"/>

        <ImageView style="@style/img_arrow"
            android:id="@+id/image_arrow"/>
    </LinearLayout>

    <View style="@style/bg_line"
        android:id="@+id/line"
        android:layout_below="@+id/item_layout"/>
</RelativeLayout>
