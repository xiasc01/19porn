<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">

        <ImageView
            android:id="@+id/iv_girl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:cropToPadding="true" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_video_title">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/short_video_title"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="@dimen/design_navigation_elevation"
                android:layout_marginRight="@dimen/design_navigation_elevation"
                android:typeface="normal"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/th_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:background="#00ffffff"
            android:src="@drawable/th_play" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:text="00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/duration"
                android:layout_marginRight="@dimen/design_navigation_elevation"
                android:layout_marginBottom="12dp"
                android:textColor="@color/colorAccent"
                android:typeface="normal"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="44dp">

        <LinearLayout
            android:id="@+id/detail_info_label"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:layout_marginLeft="6dp">

            <TextView
                android:text="自拍"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_content"
                android:textStyle="normal|bold"
                android:textSize="12sp" />

            <TextView
                android:text=" | "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" />

            <TextView
                android:text="画质 8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_pic_grade"
                android:textStyle="normal|bold"
                android:textSize="12sp" />

            <TextView
                android:text=" | "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" />

            <TextView
                android:text="内容 7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_content_grade"
                android:textStyle="normal|bold"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/value"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/pay_diamond"
                android:id="@+id/value_icon"
                android:layout_weight="1" />

            <TextView
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value_text"
                android:layout_weight="1"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/praise"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/res_click_good_normal"
                android:id="@+id/praise_icon"
                android:background="#00ffffff"
                android:layout_weight="1" />

            <TextView
                android:text="1592"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/praise_text"
                android:layout_gravity="center"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/enshrine"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/a6d"
                android:id="@+id/enshrine_icon"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:layout_marginRight="6dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>